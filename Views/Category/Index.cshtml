@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<body style="background-color: black">
    <h1>Index Category</h1>

    <table class="table table-bordered table-striped" style="width:100%; background-color: dimgray">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
        </tr>

    </thead>
    <tbody>
        @foreach(var category in Model)
        {
            <tr>x
                <td width="50%">
                    @category.name
                </td>
                <td width="40%">
                    @category.displayOrder
                </td>
            </tr>
        }

    </tbody>
</table>


</body>



